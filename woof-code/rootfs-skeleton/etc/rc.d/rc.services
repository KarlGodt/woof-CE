SCR=`/bin/find -H /etc/init.d/ \
 \( -type f -o -type l \) \
 \( -perm -u=x \)`

SCR=`echo "$SCR" | sort`
for service_script in $SCR;
do
 test -d "$service_script" && continue
 test -x "$service_script" || continue
 test -L "$service_script" && { TARGET=`readlink -f "$service_script"`; test -x "$TARGET" || continue; }
 #mkdir $VERB -p /tmp/${service_script##*/}
 echo "Starting $service_script.."
 #exec $service_script start >>/tmp/${service_script##*/}/${service_script##*/}.log 2>&1 & sleep 0.1
 #exec $service_script start >>/tmp/init.d/${service_script##*/}.log 2>&1 & sleep 0.1
 . $service_script start >>/tmp/init.d/${service_script##*/}.log 2>&1 & sleep 0.1
 #. $service_script start &
done
;;

