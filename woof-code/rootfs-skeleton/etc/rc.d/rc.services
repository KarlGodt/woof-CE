. /etc/rc.d/f4puppy5
. /lib/lsb/init-functions

mkdir $VERB -p /tmp/init.d

case $1 in
''| start)
#v406 a really gross workaround for now. rerwin found that the /etc/init.d/slomodem
#script was running before slusb had properly loaded (on a slow PC). As this
#problem could occur for any init.d script, a big sleep here...
sleep 3

LSMODS=`lsmod | grep -v -w -E 'snd|processor|ac|Not tainted|Module' | cut -f 1 -d ' '`
for i in $LSMODS ; do
echo "$i"
#find /etc/init.d/ -maxdepth 1 \( -type f -o -type l \) -iname "*$i*" -exec echo chmoding +x {} \; -exec chmod $VERB +x {} \;
find /etc/init.d/ -maxdepth 1 \( -type f -o -type l \) -iname "*$i*" -exec chmod $VERB +x {} \;
done

LSMODS2=`echo "$LSMODS" | tr '\n' '|' | tr -s '|' | sed 's#^|*##;s#|*$##'`
echo LSMODS2="$LSMODS2"

for i in /etc/init.d/FIRMWARE/* ; do
#if [ -z "`echo "$LSMODS" | grep -i "$(basename "$i")"`" ] ; then

 if [ -z "`echo "$i" | grep -i -E "$LSMODS2"`" ] ; then
  #echo "chmod -x $i"
  chmod $VERB -x "$i"
 else
  #echo "chmod +x $i"
  chmod $VERB +x "$i"
 fi

done

for_func(){
for service_script in /etc/init.d/*
do
 [ -x $service_script ] && echo "$service_script" && exec $service_script start & sleep 0.1
done
unset service_script

for service_script in /etc/init.d/DEFAULT/*
do
 [ -x $service_script ] && echo "$service_script" && exec $service_script start & sleep 0.1
done
unset service_script

for service_script in /etc/init.d/FIRMWARE/*
do
 [ -x $service_script ] && echo "$service_script" && exec $service_script start & sleep 0.1
done
unset service_script
}
_random_find_and_start(){
/bin/find -H /etc/init.d/ \
\( -type f -o -type l \) \
\( -perm /777 -o -perm /775 -o -perm /771 -o -perm /755 -o -perm /751 -o -perm /711 \) \
-exec echo {} \; -exec {} start \;
}

#SCR=`/bin/find -H /etc/init.d/ \
