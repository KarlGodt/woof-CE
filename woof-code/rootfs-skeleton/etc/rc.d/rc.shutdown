 [ -d ${SMNTPT}${SAVEPATH} ] || return 1 #some kind of error, abort.

 JOPT=""
 [ "$SAVEPART" = "fd0" ] && SIZEPFILE=$(( SIZEPFILE - 16 ))
    [ "$SFEXT" = "3fs" ] && JOPT='-j'
