################## kill zombies ######################################################
_killzombies(){

   sleep 1     #newer fuser
while read pid status; do
     [ "$pid" -a "$status" ] || continue
      case $status in
      Z*) :;;
      *) continue;;
      esac
      case $pid in
      1|$$|$PPID) continue;;
      esac
     kill -9 $pid
done << EoI
$(ps -o pid,stat | grep -w Z)
EoI
}
