  mkdir $VERB -p /mnt/$SAVEPART 2>>$ERR #/tmp/savepup
  mount $VERB $VERB -t $SAVEFS /dev/$SAVEPART /mnt/$SAVEPART #/tmp/savepup
  SMNTPT="/mnt/$SAVEPART" #"/tmp/savepup"
