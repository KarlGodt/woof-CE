   [ "$DEBUG" ] && LINEP=D014 echo "$DBG line `[ $LINENO ] && echo $LINENO || _get_lineno_f4p4 $LINEP` DRVICON-boot : '$DRVICON'" >&2
 fi

 #find out if already done...
 if [ -f "$globiconsFN" ];then
