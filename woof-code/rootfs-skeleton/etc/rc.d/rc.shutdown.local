. /etc/rc.d/f4puppy5

# REM : Kill loged in consoles to force
#        writing to history file ..?
currentconsole=`tty`
_info "currentconsole='$currentconsole'"
curr="${currentconsole##*/}"
#if [ "$curr" != 'tty1' ];then chvt 1;fi
CONS=`/bin/ps -f -C sh |grep tty|grep -vw "$curr" |awk '{print $2}'`
for pid in $CONS;do
kill -1 $pid
sleep 1s;
done

KERNEL_RELEASE=`uname -r` ##+++2012-04-11

PROG='/etc/rc.d/rc.shutdown.local'
_info "\\033[0;35m""$PROG""\\033[0;39m" >/dev/console

###backup system information files
_make_backups(){
# $HOME/my-documents/SYSTEM-BAKS
BackupDir=$HOME/my-documents/SYSTEM-BAKS/"`date +%d%b%Y`".$$
if [ ! -d "$BackupDir" ]; then
mkdir -p "$BackupDir"
fi

test -f /tmp/xerrs.log && cp $VERB /tmp/xerrs.log $BackupDir
test -f /tmp/Xerrs* && cp $VERB /tmp/Xerrs* $BackupDir
test -f /tmp/Xorg*  && cp $VERB /tmp/Xorg* $BackupDir

test -f /tmp/bootkernel.log  && cp $VERB /tmp/bootkernel.log $BackupDir
test -f /tmp/bootsysinit.log && cp $VERB /tmp/bootsysinit.log $BackupDir

test -f /var/log/messages   && cp $VERB /var/log/messages $BackupDir
test -f /var/log/messages.0 && cp $VERB /var/log/messages.0 $BackupDir

test -f /var/log/Xorg.0.log && cp $VERB /var/log/Xorg.0.log $BackupDir
test -f /etc/X11/xorg.conf  && cp $VERB /etc/X11/xorg.conf $BackupDir

# bash & ash
test -f $HOME/.history      && cp $VERB $HOME/.history $BackupDir
test -f $HOME/.ash_history  && cp $VERB $HOME/.ash_history $BackupDir
# vte
test -f $HOME/.bash_history && cat $HOME/.bash_history | sed "/^cd '/d" > $BackupDir/.bash_history

(
echo
uname -a
echo
uname -r
cat /proc/cmdline
echo
date

echo

echo 'lsmod'
lsmod
echo
echo 'lspci'
lspci
echo
echo 'elspci -l'
elspci -l
echo

echo
ls -l /dev
echo
) >>$BackupDir/Notes
}
_make_backups

_info "\\033[0;35m""Finished Backup part""\\033[0;39m" >/dev/console


