remove_fsckme_func(){
    if [ "$ROOT_RW" ];then
    echo -n "Removing fsckme flag file ... "
find / -maxdepth 3 -type f -iname "*fsckme*" -exec rm {} \;
    echo " ... DONE ";fi
}
