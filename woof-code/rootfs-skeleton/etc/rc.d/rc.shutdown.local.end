del_mnt_func(){
        if [ "$ROOT_RW" ];then
MNTD=`find /mnt -maxdepth 1 -type d \( -name "*+*" -o -name "*.*.[0-9]*" \)` #KRG
for i in $MNTD; do  #KRG
    if [ -z "`mount | grep $i`" ];then
echo "removing $i"
rmdir "$i"  #KRG
    fi
done
MNTD=`find /mnt -maxdepth 1 -type d -name "*.[0-9]*" |grep -e '\.[0-9]*$'`
for i in $MNTD; do
    if [ -z "`mount | grep $i`" ];then
echo "removing $i"
rmdir "$i"
    fi
done
        fi
}
