if test "`lsmod | grep -w 'apm'`" != ""; then
chmod +w /sys/module/apm/parameters/power_off
chmod +w /sys/module/apm/parameters/realmode_power_off


echo y > /sys/module/apm/parameters/power_off
echo y > /sys/module/apm/parameters/realmode_power_off


chmod -w /sys/module/apm/parameters/power_off
chmod -w /sys/module/apm/parameters/realmode_power_off
fi

