if test -f /tmp/modprobe.conf ; then #1

cp -f /tmp/modprobe.conf /etc/modprobe.conf
cp -f /tmp/modprobe.conf /etc/modprobe.d/modprobe.conf
cp -f /tmp/modprobe.conf /etc/mult_kernels/modprobe.conf.$KERNVER
[ -d /etc/mult_kernels/modprobe.d.$KERNVER ] && cp -f /tmp/modprobe.conf /etc/mult_kernels/modprobe.d.$KERNVER/modprobe.conf

elif test -f /tmp/modprobe.conf.setup_alsa_func ; then
cp -f /tmp/modprobe.conf.setup_alsa_func /etc/modprobe.conf
cp -f /tmp/modprobe.conf.setup_alsa_func /etc/modprobe.d/modprobe.conf
cp -f /tmp/modprobe.conf .setup_alsa_func/etc/mult_kernels/modprobe.conf.$KERNVER
[ -d /etc/mult_kernels/modprobe.d.$KERNVER ] && cp -f /tmp/modprobe.conf.setup_alsa_func /etc/mult_kernels/modprobe.d.$KERNVER/modprobe.conf

fi

if test -f /etc/mult_kernels/modprobe.conf.$KERNVER ; then #1.1
cp -f /etc/mult_kernels/modprobe.conf.$KERNVER /etc/modprobe.conf
else
if test -f /etc/modprobe.conf ; then #1.2
cp /etc/modprobe.conf /etc/mult_kernels/modprobe.conf.$KERNVER
fi
fi #1

if test -d /etc/mult_kernels/modprobe.d.$KERNVER ; then #2
rm -f -r /etc/modprobe.d
cp -f -r /etc/mult_kernels/modprobe.d.$KERNVER /etc/modprobe.d
else #2

if test -d /etc/modprobe.d ; then #2.1
cp -r /etc/modprobe.d /etc/mult_kernels/modprobe.d.$KERNVER
fi #2.1
fi #2

if test ! -d /etc/mult_kernels/rc.d ; then
mkdir /etc/mult_kernels/rc.d
fi

if test ! -f /etc/mult_kernels/rc.d/MODULESCONFIG.$KERNVER ; then
cp /etc/rc.d/MODULESCONFIG /etc/mult_kernels/rc.d/MODULESCONFIG.$KERNVER
else
rm /etc/rc.d/MODULESCONFIG
cp /etc/mult_kernels/rc.d/MODULESCONFIG.$KERNVER /etc/rc.d/MODULESCONFIG
fi

if test -f /lib/modules/$KERNVER/DOTconfig* ; then
cp /lib/modules/$KERNVER/DOTconfig* /etc/modules/
fi
}
