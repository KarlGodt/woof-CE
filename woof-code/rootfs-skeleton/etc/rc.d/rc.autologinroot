#!/bin/ash

sleep 2s

while test "`pidof rc.launchxwin xwin xinit X xorgwizard`"; do
sleep 2s
done

test "`pidof poweroff reboot rc.shutdown`" && exit 0

for dir in /tmp /tmp/xwin; do
 test -f "$dir"/wmexitmode.txt && read eX <"$dir"/wmexitmode.txt
done

case $eX in
*poweroff|*reboot) exit 0;;
esac

exec 1>/dev/console 2>&1
exec /sbin/getty -n -l /bin/autologinroot 38400 tty1
