#!/bin/ash

rm -f /dev/vc/9
mknod /dev/vc/9 c 4 9

until [ "`/bin/pidof rc.shutdown`" ]; do
( /bin/dmesg | /bin/tail -n 20 ) || break
 #/bin/sleep 60 || break

 __out__(){
 c=0
 until [ "$c" -eq 60 ]
 do
 sleep 1
 c=$((c+1))
 done   ; }

 sleep 3
 [ "`pidof rc.shutdown reboot poweroff`" ] && break

done
exit 0
