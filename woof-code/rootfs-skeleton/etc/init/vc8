#!/bin/ash

rm -f /dev/vc/8
mknod /dev/vc/8 c 4 8

File='';
until [ "$File" ]; do
File="`/bin/find /tmp/xwin/[Xx]errs* -mmin -4 |/bin/tail -n1`"
/bin/sleep 2
done

until [ "`/bin/pidof rc.shutdown`" ]; do

 #if test -f "$File.*" ; then
 #/bin/cat "$File" | /bin/tail -n 20
 tail -n20 "$File" || break
 #fi

  #/bin/sleep 60 || break
  c=0
  while [ "$c" -lt 60 ]; do
  sleep 1
  c=$((c+1))
  done
 
done
exit 0
