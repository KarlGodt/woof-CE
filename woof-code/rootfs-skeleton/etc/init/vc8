#!/bin/ash

rm -f /dev/vc/8
mknod /dev/vc/8 c 4 8

File='';
until [ "$File" ]; do
File="`find /var/log/xwin/[Xx]errs* -mmin -4 | tail -n1`"
sleep 2
done

#until [ "`/bin/pidof rc.shutdown`" ]; do
while [ running ]; do

 #if test -f "$File.*" ; then
 #/bin/cat "$File" | /bin/tail -n 20
 tail -n20 "$File" || break
 #fi

  #/bin/sleep 60 || break
  __out__(){
  c=0
  while [ "$c" -lt 60 ]; do
  sleep 1
  c=$((c+1))
  done   ; }

  # 2014-11-13
  sleep 30
  [ "`pidof rc.shutdown reboot poweroff`" ] && break

 done
exit 0
