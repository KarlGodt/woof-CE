HW_ADDR='00:1E:10:1F:00:00'
ETH_IFACE_DEF=eth1
KERNEL_DRIVER='cdc-ether'

USB_ID_VEND=12d1
USB_ID_PROD_MODE_STORAGE=157d
USB_ID_PROD_MODE_MODEM=14dc
#UDEVD?? lsusb Bus 001 Device 006: ID 12d1:1f01
#Bus 001 Device 008: ID 12d1:1f01 Huawei Technologies Co., Ltd.

