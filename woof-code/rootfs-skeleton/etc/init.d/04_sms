#!/bin/ash

PARAM="$1"
[ ! "$PARAM" ] && PARAM='start'
case $PARAM in
start)
smsd
;;
stop)
pids=`/bin/ps -C smsd |awk '{print $1}' | sed '1 d'`
for pid in $pids ; do
echo $pid
for i in `seq 1 1 64` ; do
[ ! "`/bin/ps -p $pid | sed '1 d'`" ] && echo && break
echo "$i."
kill -$i $pid
sleep 0.5s
done
done

;;
check)
ps -elF | grep smsd | grep -v grep
;;
*)
echo "'$PARAM' invalid . Valid parameters start|stop|check"
exit 1
;;
esac
exit 0
