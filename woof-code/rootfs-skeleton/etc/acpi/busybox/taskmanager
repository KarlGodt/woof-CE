#!/bin/ash

/bin/logger -t "acpid:$0" -p 1 "Started"

echo -n "pidof X:"
if pidof X
then

if which pprocess;
then
 export DISPLAY=':0'
 exec pprocess
elif which htop;
then
  export DISPLAY=':0'
  exec rxvt -e htop
elif which top;
then
   export DISPLAY=':0'
   exec rxvt -e top
else
/bin/logger -t "acpid:$0" -p 1 "Neither pprocess, htop or top installed."
fi

else
top
fi

/bin/logger -t "acpid:$0" -p 1 "Ended"
