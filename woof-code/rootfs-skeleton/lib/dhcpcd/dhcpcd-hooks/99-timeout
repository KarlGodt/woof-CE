if [[ $reason == "IPV4LL" ]] || [[  $reason == "TIMEOUT" ]] || [[ $reason == "FAIL" ]] ; then

    key=`iwconfig $interface |grep 'Encryption key' |cut -f2 -d:`
    if [[ $key == "off" ]] ; then
        pidof yaf-splash && killall yaf-splash
        yaf-splash -display ":0" -margin 2 -bg violet -placement top -font "9x15B" -outline 0 -timeout 3 -text "IP Address Request Failed on $interface."
    else
        pidof yaf-splash && killall yaf-splash
        yaf-splash -display ":0" -margin 2 -bg violet -placement top -font "9x15B" -outline 0 -timeout 3 -text "IP Address Request Failed on $interface. Is your passkey correct?"
    fi
fi
