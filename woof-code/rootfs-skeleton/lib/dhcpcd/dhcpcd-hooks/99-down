if [[ $reason == "NOCARRIER"   ]] ; then
    if [[ $interface == `cat /usr/local/Pwireless2/interface` ]] ; then
        killall -SIGALRM gtrayicon
    fi
    pidof yaf-splash && killall yaf-splash
    yaf-splash -display ":0" -margin 2 -bg violet -placement top -font "9x15B" -outline 0 -timeout 2 -text "$interface is Down"
fi
