if [[ "$reason" == "BOUND" ]] || [[ "$reason" == "REBOOT" ]] ; then
    pidof yaf-splash && killall yaf-splash
    if test -s /usr/local/Pwireless2/interface; then
    if [[ $interface == `cat /usr/local/Pwireless2/interface` ]] ; then
        killall -SIGCONT gtrayicon
    fi
    fi
    yaf-splash -display ":0" -margin 2 -bg violet -placement top -font "9x15B" -outline 0 -timeout 5 -text "IP Address Acquired $new_ip_address on $interface"
fi
