if [[ $reason == "RELEASE"   ]] ; then
    pidof yaf-splash && killall yaf-splash
    if test -s /usr/local/Pwireless2/interface; then
    if [[ $interface == `cat /usr/local/Pwireless2/interface` ]] ; then
        killall -SIGALRM gtrayicon
    fi
    fi
    yaf-splash -display ":0" -margin 2 -bg violet -placement top -font "9x15B" -outline 0 -timeout 3 -text "Releasing $interface"
fi
