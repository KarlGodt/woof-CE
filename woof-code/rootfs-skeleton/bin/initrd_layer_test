#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_initrd_layer_test"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/bin/initrd_layer_test"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#

LAYERFS="unionfs"
[ "`lsmod | grep '^aufs'`" != "" ] && LAYERFS="aufs"

mkdir /pup_rw
mkdir /pup_ro1
mkdir /pup_new

mount -o ro,rbind / /pup_ro1

if [ "$LAYERFS" = "aufs" ];then
 mount -t aufs -o br:/pup_rw:/pup_ro1 aufs /pup_new
else
 mount -t unionfs -o dirs=/pup_rw:/pup_ro1 unionfs /pup_new
fi

echo '#!/bin/sh' > /pup_new/etc/rc.d/rc.sysinit

#exec chroot /pup_new
# Very End of this file 'bin/initrd_layer_test' #
###END###
