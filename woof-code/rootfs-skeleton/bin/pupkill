#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="pupkill"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script to kill PUPxxxDLG window(s)"

MY_SELF="/bin/pupkill"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST="-f & PID"
ADD_PARAMETERS="-f: Force killing of all PUP\${1}DLG
PID: Process-Id to be killed (mandatory)"
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
#(c) Copyright Barry Kauler sept 2011 bkhome.org
#License GPL3 (/usr/share/doc/legal)
# Like kill, but special code to kill /usr/bin/pupdialog dlgs.
# PID is passed in.
# See /usr/sbin/shutdownconfig for example of usage.

[ ! "$1" ] && exit 1

ALLPS="`ps`"

if test "$FORCE"; then
 pdPIDs=`echo "$ALLPS" | grep "PUP${1}DLG" | grep -v 'grep' | cut -f 1 -d ' '` #get PID of pupdialog window.
 if [ "$pdPIDs" ];then
  kill $pdPIDs 2>$ERR
  sleep 0.2
 fi
fi

if test ! "${1//[[:digit:]]/}"; then
 kill $1 2>$ERR
else
 killall $1 2>$ERR
fi

###END###
