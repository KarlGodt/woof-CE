CASEPARAM="$1"
[ -z "$1" ] && CASEPARAM="start" #gives default value
[ "$CASEPARAM" != "start" ] && [ "$CASEPARAM" != "restart" ] && [ "$CASEPARAM" != "stop" ] && exit #precaution

case "$CASEPARAM" in

stop)

#PSP=`ps-FULL -elF | grep 'pup_event_frontend_d' | grep -v 'grep' | sed 's#^ *##'`
