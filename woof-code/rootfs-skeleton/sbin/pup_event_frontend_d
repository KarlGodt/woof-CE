#VT="$VTNR $fgcons"
#for i in $VT ; do b=$(($b + 1)) ; if [ "`echo $VT | grep $b`" = "" ] ; then DBGCONS=$b && break ; fi ; done
#if test -z "$DBGCONS" ; then DBGCONS=$(($b + 1)); fi
