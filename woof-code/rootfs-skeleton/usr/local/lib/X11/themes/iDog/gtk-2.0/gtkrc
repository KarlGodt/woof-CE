style "checkradiobutton" {
  engine "pixmap" {
  image {
    function       = FLAT_BOX
    recolorable     = TRUE
    file            = "blank.png"
    border          = { 0,0,0,0 }
    stretch         = TRUE
    }
#CHECKBOX
  image {
    function        = CHECK
    recolorable     = TRUE
    shadow          = OUT
    overlay_file    = "spin1.png"
    overlay_stretch = FALSE
    }
  #Pressed
  image {
    function        = CHECK
    recolorable     = TRUE
	state           = INSENSITIVE
    shadow          = IN
    overlay_file    = "check3.png"
    overlay_stretch = FALSE
    }
  image {
    function        = CHECK
    recolorable     = TRUE
    #Since no 'state' is define, this fits the rest
    shadow          = IN
    overlay_file    = "check2.png"
    overlay_stretch = FALSE
    }
# RADIOBUTTON
  image {
    function        = OPTION
    recolorable     = TRUE
    shadow          = OUT
	state           = INSENSITIVE
    overlay_file    = "radio3.png"
    overlay_border  = { 0, 0, 0, 0 }
    overlay_stretch = FALSE
    }
  image {
    function        = OPTION
    recolorable     = TRUE
    shadow          = OUT
    #Since no 'state' is define, this fits the rest
    overlay_file    = "radio1.png"
    overlay_border  = { 0, 0, 0, 0 }
    overlay_stretch = FALSE
    }
  #Pressed
  image {
    function        = OPTION
    recolorable     = TRUE
    shadow          = IN
	state           = INSENSITIVE
    overlay_file    = "radio3.png"
    overlay_border  = { 0, 0, 0, 0 }
    overlay_stretch = FALSE
    }
  image {
    function        = OPTION
    recolorable     = TRUE
    shadow          = IN
    #Since no 'state' is define, this fits the rest
    overlay_file    = "radio2.png"
    overlay_border  = { 0, 0, 0, 0 }
    overlay_stretch = FALSE
   }
  }
}
