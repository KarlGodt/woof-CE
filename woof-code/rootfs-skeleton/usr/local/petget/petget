 if [ "$FIRSTCHAR" = "/" -o "$FIRSTCHAR" = "." ];then
  PKGPATH=`dirname "$PASSEDPARAM"`
  FULLPKGNAME=`basename "$PASSEDPARAM"`
  PKGMAIN=`basename "$PASSEDPARAM" ${EXT}`
 else
  PKGPATH=`pwd`
  if [ "$EXT" = "" ];then
   PKGMAIN="$PASSEDPARAM"
   FULLPKGNAME="${PKGMAIN}.pet"
   EXT=".pet"
  else
   FULLPKGNAME=`basename "$PASSEDPARAM"`
   PKGMAIN=`basename "$PASSEDPARAM" ${EXT}`
  fi
