#! /bin/bash
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_func_delete"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/pschedule/func_delete"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
export delete_box="
<window title=\"Pschedule - Task on time\">
 <vbox>
  <frame Delete>
   <pixmap icon_size=\"6\"><input file stock=\"gtk-clear\"></input></pixmap>
   <text use-markup=\"true\"><label>\"<b>Delete selected task?</b>\"</label></text>
  </frame>
  <hbox>
   <button>
    <input file icon=\"gtk-no\"></input>
    <label>No</label>
    <action type=\"exit\">no</action>
   </button>
   <button>
    <input file icon=\"gtk-yes\"></input>
    <label>Yes</label>
    <action type=\"exit\">yes</action>
   </button>
  </hbox>
 </vbox>
</window>"
I=$IFS; IFS=""
for STATEMENTS in  $(gtkdialog3 --program=delete_box --center); do
	eval $STATEMENTS
done
IFS=$I
if [ "$EXIT" = "yes" ]; then
	NUM=`echo $TREE | cut -d ":" -f 1` #jake_take
	sed -i -e "${NUM},${NUM}d" /var/spool/cron/crontabs/$USER #jake_take
	killall -q crond; crond #restart cron
fi
