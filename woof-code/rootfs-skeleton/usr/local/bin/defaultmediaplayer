#!/bin/ash
DEFAULT=gxineshell
OPTIONS=

if test -f "$@"; then
case "$@" in
            *.webm) exec mplayer -title "mplayer:${@##*/}" -really-quiet -loop 0 "$@";;
esac

file "$@" | grep $Q -iE 'flash video|MPEG v4' && {
#exec mplayer -use-filename-title -loop 0 "$@"
#exec mplayer -title "mplayer:${@##*/}" -loop 0 "$@"
#exec mplayer -title "mplayer:${@##*/}" -quiet -loop 0 "$@"
exec mplayer -title "mplayer:${@##*/}" -really-quiet -loop 0 "$@" &
} || {
exec $DEFAULT $OPTIONS "$@" &
}

else
exec $DEFAULT $OPTIONS "$@" &
fi
