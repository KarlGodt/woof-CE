#!/bin/sh

. /etc/rc.d/f4puppy5

appDIR=/usr/local/pupx

test -e "$appDIR" || _exit 2 "pupx apparently not installed in directory '$appDIR'"
test -d "$appDIR" || _exit 2 "pupx apparently not installed in directory '$appDIR'"

cd "$appDIR" || _exit 2 "Could not change into '$appDIR'"

_test_fx "./pupx" && {
exec ./pupx $@
} || {
_error "$PWD/pupx not an executable file"; }

###END###
