#!/bin/sh
#barryk 2005. partial update 2008.

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="Helper script for /usr/local/petget/ petget and downloadpkgs.sh ."
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
    for i in `seq 1 1 $DO_SHIFT`; do shift; done; }
_trap
}


aFILE="`basename "$@"`"

__old_get_extension__(){
if [ "`echo -n "$aFILE" | grep '\.'`" = "" ];then
 #/usr/local/bin/defaulttexteditor "$1"
 _say_need_extension
 exit 1
else
 aEXT="`echo "$aFILE" | rev | cut -f 1 -d '.' | rev`"
fi
}

# REM : Determine Extension ( File Type )
case $@ in
*.*) aEXT="${aFILE##.*}";;
*)  : _say_need_extension;; # ; exit 1;;
esac

# REM : Use filemnt for initrds and files with file systems
case $@ in
initrd*) exec filemnt "$@";;
esac


#this needs to be fleshed out a bit more...
case $aEXT in
 txt|TXT)
  /usr/local/bin/defaulttexteditor "$@"
  ;;
 doc|DOC|rtf|RTF)
  /usr/local/bin/defaultwordprocessor "$@"
  ;;
 xls|XLS)
  /usr/local/bin/defaultspreadsheet "$@"
  ;;
 htm|html|HTM|HTML)
  #/usr/local/bin/defaulttexteditor "$@"
  /usr/local/bin/defaulthtmlviewer "$@"
  ;;
 png|PNG|gif|GIF|jpg|JPG|jpeg|JPEG|xpm|XPM)
  /usr/local/bin/defaultpaint "$@"
  ;;
 pdf|PDF|ps|PS|eps|EPS)
  epdfview "$@"
  ;;

 *)

  FILE_TYPE=`file "$@"`
  case $FILE_TYPE in
  *MPEG*ADTS*)  /usr/local/bin/defaultaudioplayer "$@";;


  *) /usr/local/bin/defaulttexteditor "$@";;
  esac

  ;;
esac

###END###
