#!/bin/sh
#barryk 2005. partial update 2008.


echo "$0: '$*'" >&2

case $* in
www.*|http:*|ftp:*|https:*)        defaultbrowser "$*";;
*.htm|*.html|*.HTM|*.HTML)         defaultbrowser "$*";;
*.txt|*.TXT)                       defaulttexteditor "$*";;
*.xls|*.XLS)                       defaultspreadsheet "$*";;
*.doc|*.DOC|*.rtf|*.RTF)           defaultwordprocessor "$*";;
*.png|*.PNG|*.gif|*.GIF|*.jpg|*.JPG|*.jpeg|*.JPEG|*.xpm|*.XPM)
                                   defaultpaint "$*";;
*.pdf|*.PDF|*.ps|*.PS|*.eps|*.EPS) epdfview "$*";;
*) echo "$0: WARNING: Unhandled parameter '$*' ."
   echo "Launching '`which defaulttexteditor`' and hoping for the best..."
                           defaulttexteditor "$*";;
esac


deprecated_extension_func(){
AFILE="`basename "$1"`"

if [ "`echo -n "$AFILE" | grep '\.'`" = "" ];then
 #/usr/local/bin/defaulttexteditor "$1"
 echo "Cannont handle .." >&2
 exit
else
 AEXT="`echo "$AFILE" | rev | cut -f 1 -d '.' | rev`"
fi

#this needs to be fleshed out a bit more...
case $AEXT in
 txt|TXT)
  /usr/local/bin/defaulttexteditor "$1"
  ;;
 doc|DOC|rtf|RTF)
  /usr/local/bin/defaultwordprocessor "$1"
  ;;
 xls|XLS)
  /usr/local/bin/defaultspreadsheet "$1"
  ;;
 htm|html|HTM|HTML)
  #/usr/local/bin/defaulttexteditor "$1"
  /usr/local/bin/defaulthtmlviewer "$1"
  ;;
 png|PNG|gif|GIF|jpg|JPG|jpeg|JPEG|xpm|XPM)
  /usr/local/bin/defaultpaint "$1"
  ;;
 pdf|PDF|ps|PS|eps|EPS)
  epdfview "$1"
  ;;
 *)
  /usr/local/bin/defaulttexteditor "$1"
  ;;
esac

###END###
}
