#!/bin/ash
#barryk 2005. partial update 2008.

aFILE="`basename "$1"`"

if [ "`echo -n "$aFILE" | grep '\.[[:alnum:]]\+$'`" = "" ];then
 #/usr/local/bin/defaulttexteditor "$1"
 echo
 echo "ERROR:"
 echo "$0:$*"
 echo "Need extension to determine filetype."
 echo
 exit 1
else
 aEXT="`echo "$aFILE" | rev | cut -f 1 -d '.' | rev`"
fi

if test -f /usr/share/mime/globs; then
oIFS=$IFS
IFS='*'
while read f ext
do
echo "$f"
echo "$ext"
if test "$ext"; then
EXT_LISTED="${EXT_LISTED}\\${ext}\$|"
fi

done </usr/share/mime/globs
IFS=$oIFS
fi

echo "$EXT_LISTED"

#this needs to be fleshed out a bit more...
case $aEXT in
 txt|TXT)
  /usr/local/bin/defaulttexteditor "${1+$@}"
  ;;
 doc|DOC|rtf|RTF)
  /usr/local/bin/defaultwordprocessor "${1+$@}"
  ;;
 xls|XLS)
  /usr/local/bin/defaultspreadsheet "${1+$@}"
  ;;
 htm|html|HTM|HTML)
  #/usr/local/bin/defaulttexteditor "$1"
  /usr/local/bin/defaulthtmlviewer "${1+$@}"
  ;;
 png|PNG|gif|GIF|jpg|JPG|jpeg|JPEG|xpm|XPM)
  /usr/local/bin/defaultpaint "${1+$@}"
  ;;
 pdf|PDF|ps|PS|eps|EPS)
  epdfview "$1+$@}"
  ;;
 *)
  echo "WARNING"
  echo "$0:$@"
  echo "Unhandled file extension '$aEXT'"

  if test "$EXT_LISTED"; then
  EXT_LISTED=`echo "$EXT_LISTED" | sed 's%^|*%%;s%|*$%%' | tr -s '|'`
  echo "Known extensions:"
  echo "$EXT_LISTED"
  echo "Detection:"
  echo "\\.$aEXT" | grep $Q -E "$EXT_LISTED"
  test $? = 0 && echo OK || echo Failed
  fi

  echo "Will start /usr/local/bin/defaulttexteditor as last attempt.."
  /usr/local/bin/defaulttexteditor "${1+$@}"
  echo
  ;;
esac

###END###
