#!/bin/sh
#BK June 2009

export MOZ_DISABLE_PANGO=1

#grab these from SeaMonkey...
[ ! -f /root/.PuppyBrowser/default/cert8.db ] && /usr/local/PuppyBrowser/find_certs &

cd /usr/local/PuppyBrowser

if [ ! $1 ];then
 exec ./PuppyBrowser "file:///usr/share/doc/index.html" -title="Puppy HTML Viewer" -w=730 -h=580 -profile=flashviewer
fi

if [ $2 ];then
 exec ./PuppyBrowser $@
else
 exec ./PuppyBrowser "${1}" -title="Puppy HTML Viewer" -w=730 -h=580 -profile=flashviewer
fi
