#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_bk_compile"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/Pictureviewer/bk_compile"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
#BK June 2009

if [ "`which valac`" = "" ];then
 echo "You need the Vala compiler. Please load the 'devx' SFS file first."
 exit
fi

[ -f ./Pictureviewer ] && rm -f ./Pictureviewer

valac -C --pkg=gtk+-2.0 --pkg=poppler-glib --pkg=gdk-pixbuf-2.0 main.gs pictureviewclass.gs

gcc `pkg-config --cflags gtk+-2.0 --libs gtk+-2.0` `pkg-config --cflags poppler-glib --libs poppler-glib` `pkg-config --cflags gdk-pixbuf-2.0 --libs gdk-pixbuf-2.0` main.c pictureviewclass.c -o Pictureviewer

[ -f ./Pictureviewer ] && strip --strip-unneeded Pictureviewer
sync
# Very End of this file 'usr/local/Pictureviewer/bk_compile' #
###END###
