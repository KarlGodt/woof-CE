#!/bin/bash
#You2pup
#Copyright 2009 GPL
#Trio Tjandradjaja

case "$1" in

-download)

[ "$URL" = 'Copy & paste URL here' ] && { gxmessage -center "Please copy & paste URL";exit 0; }

VIDEO=`echo "$URL" | cut -d '=' -f2 `
#FILEDIR=`echo $FILE |sed 's!\(.*\)/.*!\1!'`

if [ "$DIRECTORY" = 'Choose a directory' ] ; then
gxmessage -center "Please choose a Directory"
else
    if [ "$FILE" = 'Type new file name' ] ; then
    gxmessage -center "Please type a new File Name"
    else
    mkdir -p "$DIRECTORY"
    #exec rxvt -title "$@" -e youtube.sh -f "$VIDEO" "$DIRECTORY"/"$FILE"
    exec rxvt -title "$@" -e youtube.sh "$VIDEO" "$DIRECTORY"
    fi
fi

;;

-convert)
if [ "$DIRECTORY" = 'Choose a directory' ] ; then
gxmessage -center "Please choose a Directory"
else
    if [ "$FILE" = 'Type new file name' ] ; then
    gxmessage -center "Please type a new File Name"
    else
    cd "$DIRECTORY"
    exec rxvt -title "$@" -e ffmpeg -i "$FILE.mp4" -f $NEWFILE "$FILE"."$NEWFILE"
    fi
fi
;;
-playori)
if [ "$FILE" = 'Type new file name' ] ; then
gxmessage -center "File not found"
else
exec defaultmediaplayer "$DIRECTORY"/"$FILE.mp4" &
fi
;;
-playnew)
if [ "$FILE" = 'Type new file name' ] ; then
gxmessage -center "File not found"
else
exec defaultmediaplayer "$DIRECTORY"/"$FILE"."$NEWFILE" &
fi
;;
esac
