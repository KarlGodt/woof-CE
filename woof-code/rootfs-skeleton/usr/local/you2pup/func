#!/bin/bash
#You2pup
#Copyright 2009 GPL
#Trio Tjandradjaja
#Modified with new youtube.sh - April 2011

case $1 in

-download)
	
	[ "$URL" = 'Step 1 - Copy & paste URL here' ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please copy & paste URL' 10 45 && exit 0
	[ ! "$URL" ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please copy & paste URL' 10 45 && exit 0
	[ "$DIRECTORY" = 'Step 2 - Choose a directory' ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please choose a directory' 10 45 && exit 0
	[ ! "$DIRECTORY" ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please choose a directory' 10 45 && exit 0
	
	VIDEO=$(echo "$URL" | cut -d '=' -f2)
	#FILEDIR=`echo $FILE |sed 's!\(.*\)/.*!\1!'`

	mkdir -p "$DIRECTORY"
	exec rxvt -bg "black" -fg "white" -e youtube.sh "$VIDEO" "$DIRECTORY" 
;;

-opendir)
	rox -s $DIRECTORY'/' &
;;

esac