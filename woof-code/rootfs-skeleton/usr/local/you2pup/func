#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_func"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/you2pup/func"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
#You2pup
#Copyright 2009 GPL
#Trio Tjandradjaja
#Modified with new youtube.sh - April 2011

case $1 in

-download)
	
	[ "$URL" = 'Step 1 - Copy & paste URL here' ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please copy & paste URL' 10 45 && exit 0
	[ ! "$URL" ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please copy & paste URL' 10 45 && exit 0
	[ "$DIRECTORY" = 'Step 2 - Choose a directory' ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please choose a directory' 10 45 && exit 0
	[ ! "$DIRECTORY" ] && Xdialog --title "You2pup" --screen-center --msgbox 'Please choose a directory' 10 45 && exit 0
	
	VIDEO=$(echo "$URL" | cut -d '=' -f2)
	#FILEDIR=`echo $FILE |sed 's!\(.*\)/.*!\1!'`

	mkdir -p "$DIRECTORY"
	exec rxvt -bg "black" -fg "white" -e youtube.sh "$VIDEO" "$DIRECTORY" 
;;

-opendir)
	rox -s $DIRECTORY'/' &
;;

esac# Very End of this file 'usr/local/you2pup/func' #
###END###
