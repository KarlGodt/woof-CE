#! /bin/bash
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_box_splash"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/pfind/box_splash"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
export pfind_splash='
<window title="Pfind" icon-name="gtk-find">
<vbox>
 <frame>
  <pixmap icon_size="6"><input file stock="gtk-find"></input></pixmap>
  <text use-markup="true"><label>"<b>Pfind</b>"</label></text>
  <text><input file>/tmp/pfind-splashtext</input></text>
  <progressbar>
   <label>Sigmund Berglund,   GPL 2007-2009</label>
   <input>while [ "$I" != "100" ]; do I=`cat /tmp/pfind-splash`; echo $I; usleep 500000; done</input>
   <action type="exit">Ready</action>
  </progressbar>
 </frame>
</vbox></window>
'
gtkdialog3 --program=pfind_splash --center
