#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_func_openastext"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/pfind/func_openastext"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#

FILE=`echo "$*" | cut -b 2-`
if [ -z "$FILE" ]; then
	TXT1="<b>$LOC710</b>"
	. "$PROGPATH"box_ok
	exit 0
fi
EXTENSION=`echo "$FILE" | sed -e 's/^.*\.//g'`
PROGRAM=`grep "$EXTENSION=" "$HOME/.pfind/pfindMIMErc" | sed -e s/^.*\=//g`
echo > /tmp/pfind-error$PROGPID
exec $TEXTEDITOR "$FILE" 2> /tmp/pfind-error$PROGPID
TXT1=`cat /tmp/pfind-error$PROGPID`
if [ -n "$TXT1" ]; then . "$PROGPATH"box_ok; fi #error

# Very End of this file 'usr/local/pfind/func_openastext' #
###END###
