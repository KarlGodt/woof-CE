#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_dialog_debugger"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/psip/dialog_debugger"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
# GPL v3 License
# PS VOIP for Puppy Linux v 0.7 June 27 008
# created by Lobster, CEL, HairyWill
# tested by Eric, Grant and the Puppy Community
###################


[ "$PJDEBUG" ] && echo started dialog_debugger

export DIALOG='<window title="PSIP Debugger" width="500">
<vbox>
	<button>
		<label>View Error Log</label>
		<action>gtklogfileviewer '$PJLOG' close 0 0 800 300 &</action>
	</button>
	<button>
		<label>Start Quality Log</label>
		<action>echo -e "\ndq\n" >> '$PJSIGNAL'</action>
		<action>touch '$PJTMP'/call-stats</action>
		<action>rxvt -g 80x18 -title "PSIP Call Quality Log" -rv -e tail -f '$PJTMP'/call-stats &</action>
		<action>echo "" >> '$PJTMP'/call-stats &</action>
		<action>echo "Hit the [Dump Call Quality] button to get the latest call stats." >> '$PJTMP'/call-stats &</action>
		<action>echo "This will only work when you have an active call." >> '$PJTMP'/call-stats &</action>
	</button>
	<button>
		<label>Dump Call Quality</label>
		<action>echo -e "\ndq\n" >> '$PJSIGNAL'</action>
	</button>
	<button>
		<label>Build Crash Report</label>
		<action>rxvt -e '$PJAPPDIR'/func_crashreport &</action>
	</button>
</vbox>
</window>'
gtkdialog3 --program DIALOG --name "PSIP Debugger" >/dev/null &

[ "$PJDEBUG" ] && echo finished dialog_debugger
