# tested by Eric, Grant and the Puppy Community
###################


[ "$PJDEBUG" ] && echo started dialog_disconnectedcall
REASON=$1
[ "$REASON" ] || REASON="no reason given"
for PID in $(ps -efw  | grep 'PSIP Disconnected Call' | grep -v 'grep' | cut -f 1-7 -d ' '); do
    [ ! "$PID" = "root" ] && kill $PID
done

MSG="${1}." #make sure gtkdialog has something to chew on if no argument passed
export DIALOG='<window title="PSIP Disconnected Call">
<vbox>
<text>
    <label>Call has been disconnected: '$REASON'</label>
  </text>
     <button ok></button>
</vbox>
</window>'

gtkdialog3 --program DIALOG --name "PSIP Disconnected Call"> /dev/null &



[ "$PJDEBUG" ] && echo finished dialog_disconnectedcall