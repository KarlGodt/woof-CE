[ "$PJDEBUG" ] && echo started dialog_incomingcall
[ "$PJDEBUG" ] && echo "$@"
CALLER="$(echo $1 | sed 's/sip://;s/@proxy01.sipphone.com//' )"
[ "$CALLER" ] || CALLER=Annonymous
export DIALOG='<window title="Incoming Call">
<vbox>
<text>
    <label>'$CALLER'</label>
  </text>
  <hbox>
	<button>
       	<input file>'$PJICONS'/answer.png</input>
		<action>echo -e "\nT\n3\na\n200\n" >> '$PJSIGNAL'</action>
	</button>
	<button>
		<input file>'$PJICONS'/textchat.png</input>
		<action>'$PJAPPDIR'/dialog_inputchat '$CALLER' </action>
	</button>
	<button>
       	<input file>'$PJICONS'/hangup.png</input>
		<action>echo -e "\nT\n1\nha\n" >> '$PJSIGNAL'</action>
		<action type="exit">reject</action>
	</button>
</hbox>
</vbox>
</window>'

[ ! "$(ps -efw | grep 'PSIP Incoming Call' | grep -v 'grep')" ] &&  gtkdialog3 --program DIALOG --name "PSIP Incoming Call"

[ "$PJDEBUG" ] && echo completed dialog_incomingcall