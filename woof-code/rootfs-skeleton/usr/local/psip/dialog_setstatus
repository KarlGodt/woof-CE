#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_dialog_setstatus"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/local/psip/dialog_setstatus"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
# GPL v3 License
# PS VOIP for Puppy Linux v 0.7 June 27 008
# created by Lobster, CEL, HairyWill
# tested by Eric, Grant and the Puppy Community
###################


[ "$PJDEBUG" ] && echo started dialog_setstatus

export DIALOG='<window title="Set Status" width="500">
<vbox>
	<button>
		<label>Online</label>
		<action>echo -e "\nT\n1\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Busy</label>
		<action>echo -e "\nT\n2\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>On The Phone</label>
		<action>echo -e "\nT\n3\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Idle</label>
		<action>echo -e "\nT\n4\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Away</label>
		<action>echo -e "\nT\n5\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Be right back</label>
		<action>echo -e "\nT\n6\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Offline</label>
		<action>echo -e "\nT\n7\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
</vbox>
</window>'
gtkdialog3 --program DIALOG --name "PSIP Set Status" >/dev/null &

[ "$PJDEBUG" ] && echo finished dialog_setstatus
