###################


[ "$PJDEBUG" ] && echo started dialog_setstatus

export DIALOG='<window title="Set Status" width="500">
<vbox>
	<button>
		<label>Online</label>
		<action>echo -e "\nT\n1\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Busy</label>
		<action>echo -e "\nT\n2\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>On The Phone</label>
		<action>echo -e "\nT\n3\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Idle</label>
		<action>echo -e "\nT\n4\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Away</label>
		<action>echo -e "\nT\n5\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Be right back</label>
		<action>echo -e "\nT\n6\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
	<button>
		<label>Offline</label>
		<action>echo -e "\nT\n7\n" >> '$PJSIGNAL'</action>
		<action type="exit">accept</action>
	</button>
</vbox>
</window>'
gtkdialog3 --program DIALOG --name "PSIP Set Status" >/dev/null &

[ "$PJDEBUG" ] && echo finished dialog_setstatus
