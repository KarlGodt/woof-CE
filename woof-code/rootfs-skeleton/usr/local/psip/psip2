#!/bin/sh

test -f /etc/rc.d/f4puppy5 && source  /etc/rc.d/f4puppy5
export PJCFG="$HOME/.psip/pjsua.cfg" # config-file
export PJAPPDIR=$(pwd)
export PJICONS=$PJAPPDIR/icons
export PJTMP=/tmp/psip
export PJSIGNAL=$PJTMP/pjsua-input #file for inputing commands
export PJLOG=$PJTMP/app-log
export PJDEBUG='anything' #to stop debugging, just leave this unset
export PJSUA=pjsua_custom_03-0.9.0


rm $PJTMP/buddy-list* 2>$ERR
$PJAPPDIR/func_startpjsua &

#start the gui
echo -e "100\nStarting Psip" > $PJTMP/status-message
$PJAPPDIR/psip-gui
