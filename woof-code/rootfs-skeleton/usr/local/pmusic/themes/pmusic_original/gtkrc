style "progressbar" {
  font_name    = "bold"
  fg[PRELIGHT] = "#000000"
  fg[NORMAL]   = "#E5E5E5"          #E4000F


  xthickness            		= 2
  ythickness            		= 2
  engine "pixmap" 
  {
    image {
      function			= BOX
      detail			= "trough"
      file				= "progressbar_trough.png"
      border			= { 2, 2, 2, 2 }
      stretch			= TRUE
#     orientation		= HORIZONTAL
    }

    image {
      function			= BOX
      detail			= "bar"
      file				= "progressbar.png"
      border			= { 2, 2, 2, 2 }
      stretch			= TRUE
#     orientation		= HORIZONTAL
    } 
  }
}

class "GtkProgress"					style "progressbar"
class "GtkProgressBar"     			style "progressbar"
