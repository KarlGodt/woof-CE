#!/bin/bash

rm $WORKDIR/end_while 2> /dev/null #flag for progress_bar

GUI_PROGRESSBAR="
<progressbar height-request=\"1\" width-request=\"1\">
 <label>\" \"</label>
 <input>"'while [ ! -f $WORKDIR/end_while ]; do nice -n 18 $APPDIR/func_progressbar; done'"</input>
 <action>refresh:PLAYLIST</action>
 <action>refresh:ARTWORK</action>
 <action>refresh:NOWPLAYING</action>
 <action>refresh:BUTTON_PLAY</action> ##play or pause icon
</progressbar>"

GUI_PROGRESS='
<timer visible="false">
 <action>refresh:PROGRESS</action>
 <action>refresh:STATUSBAR</action>
</timer>
<hscale height-request="12" draw-value="false" block-function-signals="true" update-policy="1" scale-step="1" scale-min="0" scale-max="100"> ##update-policy: 0=constantly 1=button-activated 2=delayed
 <variable>PROGRESS</variable>
 <input file>'$WORKDIR'/PERCENT_BAR</input>
 <action>. '$APPDIR'/func_player -jump_to_percent</action>
</hscale>'

GUI_PEQUALIZER="`/usr/local/pequalizer/pequalizer -e 2> /dev/null`"

GUI_STATUSBAR='
<statusbar>
 <variable>STATUSBAR</variable>
 <input file>'$WORKDIR'/statusbar</input>
</statusbar>'
