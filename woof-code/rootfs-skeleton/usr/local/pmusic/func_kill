#!/bin/bash
IFS=$'\n'

TMP="`ps`"
for I in `echo "$TMP" | grep "aplay" | awk '{print $1}'`; do kill -9 $I ; done
for I in `echo "$TMP" | grep "ffmpeg" | awk '{print $1}'`; do kill -9 $I ; done
for I in `echo "$TMP" | grep -e 'func_player -playing' | awk '{print $1}'`; do kill -9 $I ; done
for I in `echo "$TMP" | grep -e 'func -' | awk '{print $1}'`; do kill -9 $I ; done

WHILES=`ps | grep -e 'sh -c while \[ "$I" != "100" \]' | awk '{print $1}'`
for aPID in $WHILES; do kill -9 $aPID; done

killall cdda2wav
