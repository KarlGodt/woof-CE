#!/bin/bash

[ ! "$INDEX_HEIGHT" ] && INDEX_HEIGHT=100
TMP=($(>"$WORKDIR/filebrowser_dir"))
[ ! "$TMP" ] && echo $HOME > $WORKDIR/filebrowser_dir
export BROWSER_DIR="`cat $WORKDIR/filebrowser_dir`"

GUI_ADD_SEARCH="
<hbox>
 <button tooltip-text=\"$LOC170\">
  <input file stock=\"gtk-about\"></input>
  <action>. $APPDIR/func -show_add_window -source</action>
  <action>clear:INDEX</action>
  <action>refresh:INDEX</action>
 </button>
 <entry activates-default=\"true\" tooltip-text=\"$LOC406\">
  <variable>SEARCH</variable>
  <input>cat $WORKDIR/filebrowser_dir</input>
  <width>200</width><height>30</height>
  <action signal=\"key-release-event\">$APPDIR/func -search &</action>
 </entry>
 <button can-default=\"true\" has-default=\"true\" use-stock=\"true\" tooltip-text=\"$LOC406\">
  <input file stock=\"gtk-find\"></input>
  <action>$APPDIR/func -search_refresh</action>
  <action>clear:INDEX</action>
  <action>refresh:INDEX</action>
 </button>
 <button tooltip-text=\"$LOC248\">
  <input file stock=\"gtk-save\"></input>
  <action>. $APPDIR/func -add_bookmark</action>
  <action>. $APPDIR/func -show_bookmarks</action>
  <action>clear:INDEX</action>
  <action>refresh:INDEX</action>
 </button>
</hbox>"

GUI_ADD_FIELD="
<table>
 <variable>INDEX</variable>
 <height>$INDEX_HEIGHT</height><width>300</width>
 <label>\"|$LOC_TITLE                                                                 |$LOC_ARTIST                        |$LOC_ALBUM                     |$LOC_TRACK|$LOC_YEAR     |$LOC_GENRE               \"</label>
 <input>cat $WORKDIR/browser</input>
 <action>$APPDIR/func -add</action>
 <action>refresh:SEARCH</action>
 <action>refresh:PLAYLIST</action>
</table>"

GUI_ADD_PROGRESS="
<progressbar>
 <input>"'while [ ! -f $WORKDIR/end_while_add ]; do I=`cat '"$WORKDIR"'/load_id3`; echo $I; if [ $I -gt 0 ] && [ $I -lt 100 ]; then echo '"$LOC242..."'; else echo " "; fi; sleep 0.1; done'"</input>
 <action>echo 0 > $WORKDIR/load_id3</action>
 <action>clear:INDEX</action>
 <action>refresh:INDEX</action>
</progressbar>"

GUI_ADD_BUTTON_ADD_RANDOM="
<button>
 <input file icon=\"gtk-add\"></input>
 <label>$LOC232</label>
 <action>$APPDIR/func -add_random</action>
 <action>refresh:PLAYLIST</action>
</button>"

GUI_ADD_BUTTON_ADD_ALL="
<button>
 <input file icon=\"gtk-add\"></input>
 <label>$LOC230</label>
 <action>$APPDIR/func -add_all</action>
 <action>refresh:PLAYLIST</action>
</button>"

GUI_ADD_RADIOBUTTON_END="
<radiobutton tooltip-text=\"$LOC246\">
 <label>$LOC229</label>
 <variable>ADD_TO_TAIL</variable>
</radiobutton>"
GUI_ADD_RADIOBUTTON_AFTER_SELECTION="
<radiobutton tooltip-text=\"$LOC247\">
 <label>$LOC228</label>
</radiobutton>"
