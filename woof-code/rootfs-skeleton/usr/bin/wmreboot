#!/bin/ash
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_wmreboot"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/bin/wmreboot"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

TWO_HELP=1
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap

}
# End new header
#
#introduced v0.9.8
#called from /root/.fvwm95rc, .jwmrc at shutdown.
Version='1.2 KRG'
usage(){
MSG="
$0 [help]
Version $Version .
Puppy reboot script that is used if
X is running to stop X services and
`which pup_event_frontend_d` .
It simply should kill X .
It creates an entry into /tmp/wmexitmode.txt
that is read by `which xwin` to execute
`which reboot` .
Try 'reboot help' for further info .
"
if [ "$2" ];then
MSG="$MSG

$2
"
fi
echo "$MSG"
[ "$DISPLAY" ] && xmessage -bg black -fg yellow "$MSG" &
exit $1
}

for p_ in $@;do
case $p_ in
*help|-h|*usage) usage 0;;
*) :;;
esac;done

read CURRENT_WM </etc/windowmanager
case $CURRENT_WM in *jwm*) CURRENT_WM=jwm.bin;;
*enlightenment*) CURRENT_WM=enlightenment;;
esac
if [ "$CURRENT_WM" != 'enlightenment' ];then
[ "$1" ] && exit 1
fi

# REM: Give a splash, to inform user
yaf-splash -timeout 35 -bg green -text "Exiting X session....
(May take 30 seconds to shutdown daemon)" & yPID=$!

#/sbin/pup_event_frontend_d will quit if this file exists...
echo "reboot" > /tmp/wmexitmode.txt
echo "reboot" > /tmp/xwin/wmexitmode.txt  ##+++2011-11-07

pidof pup_event_frontend_d >>$OUT && killall $Q pup_event_frontend_d

__wait_for_frontend_d__(){
#v403 give time for /sbin/pup_event_frontend_d to quit.
#w478 testing 2.6.18.1 kernel, pup_event_frontend_d did not exit when it
#detected /tmp/wmeximode.txt, but became 'defunct'...
KCNT=0
PSPEFD="`/bin/ps --no-headers -C pup_event_frontend_d | grep 'pup_event_front' | grep -vE 'defunct|grep'`"
#while [ "`pidof pup_event_frontend_d`" != "" ];do
while [ "$PSPEFD" != "" ];do
 sleep 0.5
 KCNT=$((KCNT + 1))
 [ "$KCNT" -gt 60 ] && break #30 secs.
 PSPEFD="`/bin/ps --no-headers -C pup_event_frontend_d | grep 'pup_event_front' | grep -vE 'defunct|grep'`"
done
}

sleep 0.2
_sync

#w003
if [ "`pidof xfce4-panel`" != "" ];then
 #killall $Q xfce4-panel
 kill `pidof xfce4-panel`
 exit
fi

#w003
#read CURRENTWM </etc/windowmanager
CURRENT_WM=${CURRENT_WM##*/}
for sig in 1 2 6 15 9
do
if pidof ${CURRENT_WM} >>$OUT; then 
 kill -$sig `pidof ${CURRENT_WM}`
else break; fi
sleep 1
done
##e17
pidof tempget >>$OUT && kill -2 `pidof tempget`

for _file_ in $HOME/Choices/XINIT/*; do
test -f $_file_ || continue
source $_file_ stop
done

[ "$yPID" ] && /bin/ps -p $yPID --no-header && kill $yPID

sleep 1
pidof X >>$OUT && : # killall $Q X #default is SIGTERM.
sleep 1           #v1.0.7
#exec killall $Q -9 X #v1.0.7 make sure X is killed.

#after exit from X, there is a return to /usr/X11R7/bin/xwin,
#which reads /tmp/wmexitmode.

exit 0

# Very End of this file 'usr/bin/wmreboot' #
###END###
