  _sync
   _info "Copying $tmpDIR/xorg.conf.tmp /etc/X11/xorg.conf"
   cp $VERB -f "$tmpDIR"/xorg.conf.tmp /etc/X11/xorg.conf # CP new xorg.conf Two-1
  fi # 6.1.0

 #else # 6.0
 # echo -n "3" > /etc/mousebuttons
 # echo -e "...you chose \"no\"."
 # echo -e "The file /etc/mousebuttons has been created, with content \"3\"."
