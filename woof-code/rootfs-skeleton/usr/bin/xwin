if [ -z "`echo "$XWINSsorted" |head -n1 |awk '{print $6}'| grep -w "$PROGTTY"`" ];then
 echo -e "\e[0;31m""PROBS with TTY '$PROGTTY' ..
Current tty :`tty`

$XWINSsorted

apparently xwin already running @
