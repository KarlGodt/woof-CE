#!/bin/sh
#
# New header by Karl Reimer Godt, September 2014
  _TITLE_="Puppy_dirs2pets"
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="/usr/bin/dirs2pets"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in 1; do shift; done; }

_trap

}
# End new header
#
#quickly create pets
#ex: dir2pets glibc 2.10.1-2-w5

[ ! $2 ] && exit 1
APPNAME="$1"
APPVER="$2"

for ANAME in ${APPNAME}-${APPVER} ${APPNAME}_DEV-${APPVER} ${APPNAME}_DOC-${APPVER} ${APPNAME}_NLS-${APPVER}
do
 if [ -d $ANAME ];then
  echo "Creating ${ANAME}.pet"
  rm -f ${ANAME}.pet 2>/dev/null
  dir2tgz $ANAME
  tgz2pet ${ANAME}.tar.gz
  sync
 fi

done
 

