#!/bin/sh
# Quickly create pets
# ex: dir2pets glibc 2.10.1-2-w5

[ ! $2 ] && exit 1
APPNAME="$1"
APPVER="$2"

for aNAME in ${APPNAME}-${APPVER} ${APPNAME}_DEV-${APPVER} ${APPNAME}_DOC-${APPVER} ${APPNAME}_NLS-${APPVER}
do
 if [ -d $aNAME ];then
  echo "Creating ${aNAME}.pet"
  rm -f ${aNAME}.pet 2>$ERR
  dir2tgz $aNAME
  tgz2pet ${aNAME}.tar.gz
  sync
 fi

done


