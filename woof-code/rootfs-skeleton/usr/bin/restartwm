#!/bin/sh
# Exit from window manager will cause return to xwin,
# which reads /tmp/wmexitmode.txt and will relaunch w.m.


  _TITLE_=wm_restart
_VERSION_=1.0omega
_COMMENT_="$_TITLE_:Puppy Linux shell script [to TODO here]"

MY_SELF="$0"
MY_PID=$$

test -f /etc/rc.d/f4puppy5 && {
[ "$HAVE_F4PUPPY5" ] || source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST="NEXTWM"
ADD_PARAMETERS="NEXTWM : Winowmanager to exectue ie. jwm, icewm, enlightenment_start"
_provide_basic_parameters

TWO_HELP=''; TWO_VERSION=''; TWO_VERBOSE=''; TWO_DEBUG=''; ## Set to anything if code requires further down (ie. custom usage or version message)
ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap
}

NEXTWM="$1"
read PREVIOUSWM </etc/windowmanager
[ "$NEXTWM" ] || NEXTWM="$PREVIOUSWM" #v1.0.7 precaution.
echo "$NEXTWM" > /etc/windowmanager #this makes change permanent.

# Popup a short messsage if DISPLAY - if run from terminal, DISPLAY is not set
[ "$DISPLAY" ] && yaf-splash -bg green -text "Restarting X with '$NEXTWM' windowmanager..." &


echo "restart $@" > /tmp/wmexitmode.txt       #xwin needs wmexitmode.txt
echo "restart $@" > /tmp/xwin/wmexitmode.txt  ##+++2011-11-07

sleep 0.2

# REM: Killing pup_event_frontend_d triggers also
#      trap HUP line in pup_event_frontend_d,
#      here in script, not in terminal
rm $VERB -f /tmp/pup_event_manager.flg
rm $VERB -f /tmp/pup_event_change_icons.flg


[ "$FORCE" ] || { pidof sync >>$OUT || sync; }

DEBUG=1
# X init files ... ( were in .xinitrc )
[ "$FORCE" ] || {
 for _file_ in $HOME/Choices/XINIT/*; do
    test -f $_file_ || continue
    _debug "stopping $_file_ .."
    source $_file_ stop
 done
}

if [ "`pidof xfce4-panel`" != "" ];then
 #killall xfce4-panel
 kill `pidof xfce4-panel`
 exit
fi

pidof ${PREVIOUSWM##*/} >>$OUT && kill -9 `pidof ${PREVIOUSWM##*/}` #w478
##e17
pidof tempget >>$OUT && kill -2 `pidof tempget`

killall X 2>>$ERR  #default is SIGTERM.
sleep 1            #v1.0.7
#exec killall -9 X #v1.0.7 make sure X is killed.

# Very End of this file 'usr/bin/restartwm' #
###END###
