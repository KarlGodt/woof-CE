#!/bin/ash
#try prevent freememapplet escaping tray when jwm restarted.
. /etc/rc.d/f4puppy5
# BATCHMARKER01 - Marker for Line-Position to bulk insert code into.

_pidof $Q freememapplet && killall freememapplet
#_pidof $Q inotifywait   && killall inotifywait
INO_PIDS=`busybox ps | grep inotifywait | grep -v grep | grep $Q pup_event_sizefreem | awk '{print $1}'`
for aPID in $INO_PIDS; do /bin/ps --no-header -p $aPID 1>>$OUT && kill $aPID; done

sleep 1
exec freememapplet 1>>$OUT 2>>$ERR &

