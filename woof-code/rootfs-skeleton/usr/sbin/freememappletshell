#!/bin/ash
#try prevent freememapplet escaping tray when jwm restarted.

. /etc/rc.d/f4puppy5

_pidof $Q freememapplet && killall freememapplet
PSOUT=`ps`
INO_PIDS=`echo "$PSOUT" | grep inotifywait | grep sizefreem | awk '{print $1}'`
for aPID in $INO_PIDS
do
 #echo "aPID='$aPID'"
 /bin/ps --no-header -p $aPID 1>$OUT 2>$ERR && kill $aPID
done
sleep 1

exec freememapplet 1>$OUT 2>$ERR &
