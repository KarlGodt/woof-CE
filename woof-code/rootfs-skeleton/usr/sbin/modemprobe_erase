#!/bin/sh
#called from modemprobe
#delete current modem setting.
#v416 manage linuxant modems

__old_header__(){
trap "exit 1" HUP INT QUIT KILL TERM

OUT=/dev/null;ERR=$OUT
[ "$DEBUG" ] && { OUT=/dev/stdout;ERR=/dev/stderr; }
[ "$DEBUG" = "2" ] && set -x

Version='1.1'

usage(){
USAGE_MSG="
$0 [ PARAMETERS ]

-V|--version : showing version information
-H|--help : show this usage information

*******  *******  *******  *******  *******  *******  *******  *******  *******
$2
"
exit $1
}

[ "`echo "$1" | grep -wE "\-help|\-H"`" ] && usage 0
[ "`echo "$1" | grep -wE "\-version|\-V"`" ] && { echo "$0 -version $Version";exit 0; }
}

test -f /etc/rc.d/f4puppy5 && {
source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

ADD_HELP_MSG="pupdial helper script for modemprobe"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap
}

MODPROBE_CONF=/etc/modprobe.conf

rm -f /dev/modem

STATUS=0
test -f /etc/wvdial.conf && {
sed -i -e 's%^Modem = .*%Modem = MYDEVM%' /etc/wvdial.conf #424
STATUS=$((STATUS+$?))
}

#v416 v424 Remove all linmodem tty nodes with major number 240 and any links to them, to prevent wvdialonf from finding an incorrect device name after a modem-hardware change.
MODEMDEVS="`ls -l /dev/* | grep ' root root 240, ' | tr -s ' ' | rev | cut -f 1 -d ' ' | rev`"
test "$MODEMDEVS" && {
rm -f `echo "$MODEMDEVS" | tr '\n' ' '`
MODEMDEVS="`echo "$MODEMDEVS" | cut -f 3 -d '/'`"
rm -f `ls -l /dev/ttyS_* 2> /dev/null | grep ' -> ' | grep -F "$MODEMDEVS" | tr -s ' ' | rev | cut -f 3 -d ' ' | rev`
}

#Nullify all included modem configuration files, to allow fresh start.
sed -i -e 's%^include /etc/modprobe_include%#&%' "$MODPROBE_CONF"
STATUS=$((STATUS+$?))
#Reset firmware entries to allow firmware reinstall to restore only needed modprobe.conf include lines.
sed -i -e 's%^#\(dgcmodem:\)%\1%' \
-e 's%^#\(hcfmodem:\)%\1%' \
-e 's%^#\(hsfmodem:\)%\1%' \
-e 's%^#\(sl.*modem:\)%\1%' \
/etc/modules/firmware.dep.`uname -r`
STATUS=$((STATUS+$?))

xmessage "/dev/modem deleted, 'Modem' entry in /etc/wvdialconf de-initialized."
exit $STATUS
