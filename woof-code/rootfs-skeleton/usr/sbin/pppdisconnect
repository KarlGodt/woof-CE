#!/bin/sh


  _TITLE_=PPP_disconnect
_COMMENT_="CLI to run ppp -d"

MY_SELF="$0"

test -f /etc/rc.d/f4puppy5 && {
source /etc/rc.d/f4puppy5

ADD_PARAMETER_LIST=""
ADD_PARAMETERS=""
_provide_basic_parameters

ADD_HELP_MSG="$_COMMENT_"
_parse_basic_parameters "$@"
[ "$DO_SHIFT" ] && [ ! "${DO_SHIFT//[[:digit:]]/}" ] && {
  for oneSHIFT in `seq 1 1 $DO_SHIFT`; do shift; done; }

_trap
}

/usr/sbin/ppp -d
sleep 5
echo "Now disconnected from Internet"
echo -n "Press ENTER key to continue..."
read VAL1

# pppconnect started blinky, fvwm swallowed "Blinky" window,
# kill it...
#killall blinky
# Very End of this file 'usr/sbin/pppdisconnect' #
###END###
