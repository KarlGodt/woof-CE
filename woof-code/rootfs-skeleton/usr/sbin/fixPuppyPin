#!/bin/ash
#(c) Copyright Barry Kauler 2006 www.puppylinux.com
#2007 Lesser GPL licence v2 (http://www.fsf.org/licensing/licenses/lgpl.html)
#BK Aug/Sept 2007: bugfixes for v2.20, 2.21
#BK Oct 2007: bugfix new version xrandr v3.02
#v3.99 BK apr 2008: workaround for dual monitors.
#v404 change to xwininfo, tidyup.

  _TITLE_=fixpuppypin
_COMMENT_="Adjust PuppyPin for wide screen"

MY_SELF="$0"

test -f /etc/rc.d/f4puppy5 && . /etc/rc.d/f4puppy5

#************
#KRG

#OUT=/dev/null;ERR=$OUT
#[ "$DEBUG" ] && { OUT=/dev/stdout;ERR=/dev/stderr; }
[ "$DEBUG" = 2 ] && set -x

Version=1.1-KRG-MacPup_O2

usage(){
MSG="
$0 [ help | version | PUPPYPIN]
"
echo "$MSG
$2"
exit $1
}
#[ "`echo "$1" | grep -Ei "help|\-h"`" ] && usage 0 "$_COMMENT_"
#[ "`echo "$1" | grep -Ei "version|\-V"`" ] && { echo "$0: $Version";exit 0; }
#trap "exit" HUP INT QUIT ABRT KILL TERM

case $1 in *help|-h) usage 0 "$_COMMENT_";;
*version|-V)  echo "$0: $Version";exit 0;;
esac

#KRG
#************


PUPPYPIN="$1"
[ "$PUPPYPIN" ] || PUPPYPIN="$HOME/Choices/ROX-Filer/PuppyPin"

SCREENX=`xwininfo -root | grep -o -e '-geometry.*x' | cut -f 2 -d ' ' | cut -f 1 -d 'x'`

#if [ "$SCREENX" ];then

_alter_puppy_pin(){
 #find out current right side in PuppyPin...
 RIGHTX=`grep 'Xlock' "$PUPPYPIN" | cut -f 2 -d '"'`
 [ "$RIGHTX" ] || return 0
 #all icons on right side of screen will be relocated to correct right side...
 NEWRIGHTX=$((SCREENX - 32))
 if [ "$RIGHTX" != "$NEWRIGHTX" ];then
  sPATTERN="s/x=\"${RIGHTX}\"/x=\"${NEWRIGHTX}\"/"
  cat "$PUPPYPIN" | sed -e "$sPATTERN" > /tmp/PuppyPin
  _sync
  cp $VERB -f /tmp/PuppyPin "$PUPPYPIN"
 fi
}
[ "$SCREENX" ] && _alter_puppy_pin

#fi


###END###
