#!/bin/bash

function_i_want(){
if [ "$@" ] ; then
 if [[ "$@" =~ 'beg' ]] ; then
  echo "issue 1 1 chat 'Hi, everyone :)'"
 elif [[ "$@" =~ 'end' ]] ; then
  echo "issue 1 1 chat 'I am about to leave.'"
  echo "issue 1 1 chat 'Anyone has a message for me ?'"
  sleep 10s
 else
  #echo "$@"
  echo 'issue 1 1 chat '"$*"
 fi
else
 echo "issue 1 1 chat 'Greetings !!!!'"
fi
}
function_i_want "$@"

#echo "issue 1 1 chat 'Greetings !!!!'"
