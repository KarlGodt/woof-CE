# This script is a GUI I made for a command line screenshot utility called scrot, . 
export PupShots=" 
<window title=\"Pup-Shots\" icon-name=\"gtk-preferences\">

 <vbox>
 <text><label>Pup-Shots Screenshot Utility</label></text>
<pixmap>
     <input file>/usr/local/lib/X11/mini-icons/mini-camera.xpm</input> 
    </pixmap> 
	   	       <text><label>The Screenshot will be in /root with a date/time stamp on it. You'll have a 5 second delay before the image is taken.</label></text>
	  <vbox>
  <hbox>
   <text>
    <label>Fullscreen image save to root </label> 
   </text>
   <button>
    <input file>/usr/local/lib/X11/mini-icons/gtk-fullscreen.png</input> 
    
	<action>scrot -d5 -q85 '%Y-%m-%d-%h-%mn-%s.jpg' &sleep 4</action>
  <action type=\"closewindow\">DIALOG</action>
   </button>
  </hbox>
  
  <hbox>
   <text>
    <label>Fullscreen image edit/save with image viewer </label> 
   </text>
   <button>
    <input file>/usr/local/lib/X11/pixmaps/paint24.png</input>
    <action>sleep 5 && exec mtpaint -s &sleep 4</action>
	<action type=\"closewindow\">DIALOG</action>
   </button>
  </hbox>
  
     <hbox>
   <text>
    <label>Select Region (hold the Left Mouse Button and drag) </label>
   </text>
   <button>
    <input file>/usr/local/lib/X11/mini-icons/SelectRegion.png</input>
    <action>scrot -d5 -q85 -s '%Y-%m-%d-%h-%mn-%s.jpg' &sleep 4</action>
	<action type=\"closewindow\">DIALOG</action>
   </button>
  </hbox>

  </vbox>
  
  <vbox>
  
  <hbox>
   <text>
    <label>Select Window (Left click on window of choice.)</label>
   </text>
   <button>
    <input file>/usr/local/lib/X11/mini-icons/selectwindow.png</input>
    <action>scrot -d5 -q85 -s -b '%Y-%m-%d-%h-%mn-%s.jpg' &sleep 4</action> 
	<action type=\"closewindow\">DIALOG</action>
   </button>
  </hbox>
   <hbox>
   <text>
    <label>Select window without borders</label>
   </text>
   <button>
    <input file>/usr/local/lib/X11/mini-icons/selectwindow-noborders.png</input>
    <action>scrot -d5 -q85 -s '%Y-%m-%d-%h-%mn-%s.jpg' &sleep 4</action>
	<action type=\"closewindow\">DIALOG</action>
   </button>
  </hbox>
 <hbox>
   <text>
    <label>Crop fullscreen image for forum posting</label>
   </text>
   <button>
    <input file>/usr/local/lib/X11/mini-icons/window_nofullscreen.png</input>
    <action>scrot -q85 -d5 -t 600x0 '%Y-%m-%d-%h-%mn-%s.jpg' &sleep 4</action>
	<action type=\"closewindow\">DIALOG</action>
   </button>
  </hbox>
    
  <hbox>
   <text>
    <label>\"      \" </label> 
   </text>
  <button>
  <label> Cancel  </label>  
        <input file>/usr/local/lib/X11/pixmaps/shutdown24.png</input>
	<action type=\"closewindow\">DIALOG</action> 
	      </button> 
  </hbox> 

  </vbox>
     
 </vbox>
</window>
"

#echo "$Pup-Shots" | gtkdialog --stdin
gtkdialog3 --program=PupShots --center 

unset PupShots
exit 0

