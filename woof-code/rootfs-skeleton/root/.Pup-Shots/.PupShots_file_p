#!/bin/sh
# (c) MinHundHettePerro (MHHP) 2009
#2007 Lesser GPL licence v2 (http://www.fsf.org/licensing/licenses/lgpl.html)
# "action" file for Pup-Shot utility by ttuuxxx
if [ $SS = "true"  ];then
echo $DT>/root/.Pup-Shots/.PupShots_settings_p
echo $HPSW>>/root/.Pup-Shots/.PupShots_settings_p
echo $FTT>>/root/.Pup-Shots/.PupShots_settings_p
echo $Q>>/root/.Pup-Shots/.PupShots_settings_p
fi
TS='%Y-%m-%d_%H-%M-%S'
#FT='.jpg'
FT='.'$FTT
#Q=85
HPSWn=1
[ $HPSW = "false" ] && HPSWn=0
ST=`expr $DT - $HPSWn`
case "$1" in
-alt1)
#    <label>Fullscreen image save to root </label> 
	scrot -d$DT -q$Q $TS$FT &sleep $ST
	;;
-alt2)
#    <label>Fullscreen image edit/save with image viewer </label> 
    sleep $DT && exec mtpaint -s &sleep $ST
	;;
-alt3)
#    <label>Select Region (hold the Left Mouse Button and drag) </label>
    scrot -d$DT -q$Q -s $TS$FT &sleep $ST
	;;
-alt4)
#    <label>Select Window (Left click on window of choice.)</label>
    scrot -d$DT -q$Q -s -b $TS$FT &sleep $ST
	;;
-alt5)
#    <label>Select window without borders</label>
    scrot -d$DT -q$Q -s $TS$FT &sleep $ST
	;;
-alt6)
#    <label>Crop fullscreen image for forum posting</label>
    scrot -d$DT -q$Q -t 600x0 $TS$FT &sleep $ST
esac
exit 0

