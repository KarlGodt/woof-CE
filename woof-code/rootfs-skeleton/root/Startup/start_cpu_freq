#!/bin/sh
modprobe -v acpi-cpufreq || exit 1
modprobe -v cpufreq_ondemand || exit 2
test -w /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor || exit 3
echo ondemand > /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
echo ondemand > /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor
test -w /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq || exit 4
echo 1600000 > /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
echo 2667000 > /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq
echo 1600000 > /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq
echo 2667000 > /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq
