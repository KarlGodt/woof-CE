// art_delete - delete a listing

#cgivar id

#set TITLE = "Delete a listing"
#include top

<center>

<br>
<br>
<br>

#sql delete from examp_art where id = @id

#set err = $sqlerror() 

#if @err != 0
  <h3>SQL error @err occurred on delete.</h3>
#else
  <h3>Listing deleted.  <a href="?rtn=art_menu">Continue</a></h3>
#endif

