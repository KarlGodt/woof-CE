#!/bin/bash

#uninstall all aclocal

for bindir in `echo "$PATH" |tr ':' ' '`;do find $bindir -maxdepth 1 \( -type f -o -type l \) -iname "aclocal*" -delete;done
for sharedir in `echo "$PATH" |tr ':' ' '`;do test -d $sharedir/../share/ || continue;find $sharedir/../share/ -maxdepth 1 \( -type d -o -type l \) -iname "aclocal*" -exec rm -rf {} \; ;done

#uninstall all automake

for bindir in `echo "$PATH" |tr ':' ' '`;do find $bindir -maxdepth 1 -iname "automake*" -delete;done
for sharedir in `echo "$PATH" |tr ':' ' '`;do test -d $sharedir/../share/ || continue;find $sharedir/../share/ -maxdepth 1 \( -type d -o -type l \) -iname "automake*" -exec rm -rf {} \; ;done


#uninstall all libtool

for bindir in `echo "$PATH" |tr ':' ' '`;do find $bindir -maxdepth 1 \( -type f -o -type l \) -iname "libtool*" -delete;done  #libtool* includes libtoolize
for sharedir in `echo "$PATH" |tr ':' ' '`;do test -d $sharedir/../share/ || continue;find $sharedir/../share/ -maxdepth 1 \( -type d -o -type l \) -iname "libtool*" -exec rm -rf {} \; ;done
for libdir in `echo "$PATH" |tr ':' ' '`;do test -d $libdir/../lib/ || continue;find $libdir/../lib/ -maxdepth 1 \( -type f -o -type l \) -iname "libltdl*" -delete;done



