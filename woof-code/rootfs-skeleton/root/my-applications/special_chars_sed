KERNELVER=`uname -r`
SP_CHARS='~!@#$%^&*()_+`-={}|[]:"<>?;,.\/'"'"  #"geany
export LC_ALL=C
substP1=`echo "$SP_CHARS" | sed -r 'sA\.AA;sA(.)A\\\\\1Ag'`
KERNELSUBVER=`echo -n "${KERNELVER%%[$substP1]*}" |cut -f3 -d '.'` #v423

echo
echo "SP_CHARS=$SP_CHARS"
echo
echo "substP1=$substP1"
echo
echo "KERNELVER=$KERNELVER"
echo
echo "KERNELSUBVER=$KERNELSUBVER"
echo
